<!-- Profile info section -->
<div class="user-profile">
  <div class="profile row">
    <div class="col-md-4 avatar">
      <div class="wrapper">
        <%= profile_pic %>
      </div>
    </div>
    <div class="col-md-8 basic-info">
      <div class="user-wrapper">
        <h2 class="username"><%= @user.username %></h2>
        <%= edit_profile %>
      </div>
      <ul class="posts">
        <li><span><%= pluralize(@posts.count, "vision") %></span></li>
      </ul>
      <h2 class="name"><%= @user.name %></h2>
      <% if @user == current_user %>
        <a class="email"><%= @user.email %></a>
      <% end %>
      <div class="bio-box">
        <h2 class="bio">Bio:</h2>
        <p><%= @user.bio %></p>
      </div>
    </div>
  </div>
</div>

<!-- Profile tabs section -->
<div class="user-tabs">
  <a class="tab active" href="<%= user_path(current_user) %>">
    <i class="fa fa-th"></i>
    POSTS
  </a>
  <a class="tab" href="<%= new_user_post_path(current_user) %>">
    <i class="fa fa-bookmark"></i>
    NEW IMAGE
  </a>
  <a class="tab" href="<%= user_path(current_user) %>">
    <i class="fa fa-tag"></i>
    TAGGED
  </a>

</div>

<!-- Profile images section -->
<div class="user-images">
  <% @posts.each do |post|%>
    <div class="wrapper">
      <%= link_to (image_tag post.image.url(:medium)), user_post_path(post.user, post) %>
    </div>
  <% end %>
</div>
